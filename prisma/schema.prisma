generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ban {
  uuid     String @id
  nickname String @unique

  startDate DateTime  @default(now())
  endDate   DateTime?
  gravity   Gravity
  reason    String

  @@map("bans")
}

model Founder {
  id       String  @id
  username String  @unique

  @@map("discord_referents")
}

enum Gravity {
  LOW
  MEDIUM
  HIGH
}
